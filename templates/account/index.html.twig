{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

<section class="container m-2 h-screen mx-auto border-2 border-gray-400 rounded-lg flex flex-row">

    <nav class="w-1/3 md:w-1/6 h-auto border-r-2 bg-gray-300 border-gray-400 text-sm md:text-lg pt-2 pb-2">
        <ul class="flex flex-col gap-2 pl-1 h-full">
            <li class="bg-gray-600 rounded-l-3xl p-2 pl-4 text-yellow-400 uppercase font-mono hover:bg-gray-800 font-bold tracking-wider"><a href="{{ path('account') }}" class="w-full h-full"><i class="fas fa-user w-4 h-4 mr-3"></i>Compte</a></li>
            <li class="bg-gray-600 rounded-l-3xl p-2 pl-4 text-yellow-400 uppercase font-mono hover:bg-gray-800 font-bold tracking-wider"><a href="{{ path('account_settings') }}"><i class="fas fa-user-cog w-4 h-4 mr-3"></i>Param√®tres</a></li>
            <li class="bg-gray-600 rounded-l-3xl p-2 pl-4 text-yellow-400 uppercase font-mono hover:bg-gray-800 font-bold tracking-wider"><a href="{{ path('account_favorites') }}"><i class="fas fa-user-check w-4 h-4 mr-3"></i>Favoris</a></li>
        </ul>
    </nav>

    <div class="w-full h-full flex justify-center p-8 gap-3">


        <div class="border-2 border-yellow-500 h-full w-11/12 md:w-3/5 flex flex-col justify-evenly items-center p-2">

           <img class="rounded-full border-gray-800 border-2 h-1/4 w-1/4 object-cover" src="{{ app.user.avatar ? asset('upload/users/' ~ app.user.avatar) : asset('assets_img/avatar_default.png') }}" alt="Avatar de {{ user.pseudo }}">

            <div class="flex flex-col gap-1 w-2/5">
                <span class="uppercase font-bold md:text-lg border-b-2 border-yellow-500 text-center">Email</span>   
                <span class="text-sm md:text-base text-center">{{ user.email }}</span>   
            </div>
            
            <div class="flex flex-col gap-1 w-2/5">
                <span class="uppercase font-bold md:text-lg text-lg border-b-2 border-yellow-500 text-center">Pseudonyme</span>   
                <span class="text-sm md:text-base text-center">{{ user.pseudo }}</span>   
            </div>

            <div class="flex flex-col gap-1 w-2/5">
                <span class="uppercase font-bold md:text-lg text-lg border-b-2 border-yellow-500 text-center">Permissions</span>
                {% for role in user.roles %}    

                    {% if role == "ROLE_USER" %}
                        <span class="text-sm md:text-base text-center ">Utilisateur</span>   
                    {% elseif role == "ROLE_ADMIN" %}
                        <span class="text-sm md:text-base text-center">Administrateur</span> 
                    {% else %}
                        <span class="text-sm md:text-base text-center">{{ role }}</span>   
                    {% endif %}
                    
                {% endfor %}
            </div>
        </div>

    </div>

</section>

{% endblock %}
