{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

<section class="container m-2 mx-auto bg-yellow-300 border-2 border-yellow-500 rounded-lg flex flex-row">

    <nav class="w-1/6 h-auto border-r-2 border-yellow-500 text-lg pt-2 pb-2">
        <ul class="flex flex-col gap-2 pl-1 h-full">
            <li class="bg-gray-600 rounded-l-3xl p-2 pl-4 text-yellow-400 uppercase font-mono hover:bg-gray-800 font-bold tracking-wider"><a href="{{ path('account') }}" class="w-full h-full"><i class="fas fa-user w-4 h-4 mr-3"></i>Compte</a></li>
            <li class="bg-gray-600 rounded-l-3xl p-2 pl-4 text-yellow-400 uppercase font-mono hover:bg-gray-800 font-bold tracking-wider"><a href="{{ path('account_settings') }}"><i class="fas fa-user-cog w-4 h-4 mr-3"></i>Param√®tres</a></li>
            <li class="bg-gray-600 rounded-l-3xl p-2 pl-4 text-yellow-400 uppercase font-mono hover:bg-gray-800 font-bold tracking-wider"><a href="#"><i class="fas fa-user-check w-4 h-4 mr-3"></i>Favoris</a></li>
        </ul>
    </nav>

    <div class="w-full h-full py-2 px-4 flex-col">
        {{ form_start(form) }}
            {{ form_row(form.pseudo) }}
            {{ form_row(form.oldPassword) }}
            {{ form_row(form.password, {
                label: 'Mot de passe'
            }) }}

            <button type="submit" class="btn btn-lg btn-primary py-2 px-6 bg-blue-700 hover:bg-blue-900 border-2 border-blue-900 hover:border-gray-800 text-white font-bold rounded focus:outline-none focus:shadow-outline w-full" formnovalidate>Modifier les informations</button>
        {{ form_end(form) }}
    </div>

</section>

{% endblock %}
