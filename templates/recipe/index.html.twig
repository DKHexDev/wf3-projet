{% extends 'base.html.twig' %}

{% block title %}Hello RecipeController!
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #menu { height: 20vh ;width : 60vw; overflow-x: scroll; overflow-x: scroll; }
    .object { min-width : 15rem;}
</style>

<div class="flex">

    <form class="flex flex-col bg-blue-200 rounded-lg w-1/3 p-4 m-2 text-center" id="filtres">

        <div class="flex flex-wrap m-4">
            <label for="autumn"> Automne </label>
            <input id="autumn" name="season[]" value="autumn" type="checkbox" class="m-4 check">

            <label for="winter"> Hiver </label>
            <input id="winter" name="season[]" value="winter" type="checkbox" class=" m-4 check">

            <label for="spring"> Printemps </label>
            <input id="spring" name="season[]" value="spring" type="checkbox" class="m-4 check">

            <label for="summer"> Eté </label>
            <input id="summer" name="season[]" value="summer" type="checkbox" class="m-4 check">
        </div>

            <!-- Events --> 

        <div class="flex flex-wrap m-4">
            <label for="christmas"> Fêtes de fin d'année </label>
            <input id="christmas" name="event[]" value="christmas" type="checkbox" class="m-4 check">

            <label for="easter"> Pâques </label>
            <input id="easter" name="event[]" value="easter" type="checkbox" class="m-4 check">

            <label for="halloween"> Halloween </label>
            <input id="halloween" name="event[]" value="halloween" type="checkbox" class="m-4 check">

            <label for="bday"> Anniversaire </label>
            <input id="bday" name="event[]" value="bday" type="checkbox" class="m-4 check">

            <label for="valentineday"> Saint-Valentin </label>
            <input id="valentineday" name="event[]" value="valentineday" type="checkbox" class="m-4 check">
        </div>

            <!-- Cultures -->

        <div class="flex flex-wrap m-4">

            <label for="african"> Afrique </label>
            <input id="african" name="culture[]" value="african" type="checkbox" class="m-4 check">

            <label for="american"> Etats-unis </label>
            <input id="american" name="culture[]" value="american" type="checkbox" class="m-4 check">

            <label for="asia"> Asiatique </label>
            <input id="asia" name="culture[]" value="asia" type="checkbox" class="m-4 check">

            <label for="france"> Française </label>
            <input id="france" name="culture[]" value="france" type="checkbox" class="m-4 check">

            <label for="italian"> Italienne </label>
            <input id="italian" name="culture[]" value="italian" type="checkbox" class="m-4 check">

            <label for="mexican"> Mexicaine </label>
            <input id="mexican" name="culture[]" value="mexican" type="checkbox" class="m-4 check">

        </div>

            <!-- Type -->

        <div class="flex flex-wrap">

            <label for="starter"> Entrée </label>
            <input id="starter" name="type[]" value="starter" type="checkbox" class="m-4 check">

            <label for="dish"> Plat </label>
            <input id="dish"    name="type[]" value="dish"    type="checkbox" class="m-4 check">

            <label for="dessert"> Dessert </label>
            <input id="dessert" name="type[]" value="dessert" type="checkbox" class="m-4 check">

        </div>

    </form>

    <div class="flex items-center flex-col-reverse">

        <div class="zone flex">
            <ul class="grid xl:grid-cols-4 md:grid-cols-2 grid-cols-1 gap-2 max-w-6xl" id="product-list">

            {%for recipe in recipes %}

            <div id={{ recipe.id }} class="m-2 myDraggableElement object" draggable='true'>

                <li class="flex flex-col bg-gray-200 rounded-lg p-4 m-2 recipe"> {{ recipe.name }} {{ recipe.description }}</li>

            </div>

            {% endfor %}
        </div>

        <button id="generate" type="button" class="w-32 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"> Générer la liste </button>
        <div class="flex dropzone rounded-lg zone bg-green-200 w-100 h-36" id="menu">
            <h2> Menu </h2>
            
        </div>

    </div>
</div>
{% endblock %}