{% extends 'base.html.twig' %}

{% block title %}Recettes
{% endblock %}

{% block body %}


	<div class="flex">

		<form class="flex flex-col border-2 bg-gray-200 border-gray-400 rounded shadow-lg rounded-lg w-3/12 p-6 m-4 text-center" id="filtres">

			<h2 class="uppercase text-sm md:text-xl text-gray-600 font-bold my-6">saisons</h2>

			<!--Seasons-->

			<div class="grid grid-cols-2 gap-4 md:gap-8 items-center text-xs md:text-base">

				<button id="autumn" name="season[]" value="autumn" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Automne">&#127809;</button>

				<button id="winter" name="season[]" value="winter" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Hiver">&#9924;</button>

				<button id="spring" name="season[]" value="spring" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Printemps">&#127793;</button>

				<button id="summer" name="season[]" value="summer" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Été">&#127958;</button>

			</div>

			<!-- Events -->

			<h2 class="uppercase text-sm md:text-xl text-gray-600 font-bold my-6">célébrations</h2>

			<div class="grid grid-cols-2 gap-4 md:gap-8 items-center text-xs md:text-base">

				<button id="christmas" name="event[]" value="christmas" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Fête de fin d'année">&#127876;</button>

				<button id="easter" name="event[]" value="easter" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Pâques">&#127851;</button>

				<button id="halloween" name="event[]" value="halloween" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Halloween">&#127875;</button>

				<button id="bday" name="event[]" value="bday" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Anniversaire">&#127874;</button>

				<button id="valentineday" name="event[]" value="valentineday" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Saint-Valentin">&#128140;</button>

			</div>

			<!-- Cultures -->

			<h2 class="uppercase text-sm md:text-xl text-gray-600 font-bold my-6">pays</h2>

			<div class="grid grid-cols-2 gap-4 md:gap-8 items-center text-xs md:text-base">

				<button  id="african" name="culture[]" value="african" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Cameroun">🇨🇲</button>

				<button id="american" name="culture[]" value="american" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="États-Unis">🇺🇸</button>

				<button id="asia" name="culture[]" value="asia" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Japon">🇯🇵</button>

				<button id="france" name="culture[]" value="france" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="France">🇫🇷</button>

				<button id="italian" name="culture[]" value="italian" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Italie">🇮🇹</button>

				<button id="mexican" name="culture[]" value="mexican" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Mexique">🇲🇽</button>

			</div>

			<!-- Type -->

			<h2 class="uppercase text-sm md:text-xl text-gray-600 font-bold my-6">Menu</h2>

			<div class="grid grid-cols-2 gap-4 md:gap-8 items-center text-xs md:text-base">

				<button  id="starter" name="type[]" value="starter" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Entrée">🥗</button>

				<button id="dish" name="type[]" value="dish" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Plat">🍲</button>

				<button id="dessert" name="type[]" value="dessert" class="check bg-gray-300 border-b-2 border-r-2 border-gray-400 shadow rounded-lg text-2xl md:text-3xl" title="Desser">🥞</button>

			</div>

		</form>

		<div class="flex flex-col-reverse w-full">
			<div class="zone flex">
				<ul class="grid xl:grid-cols-4 md:grid-cols-2 grid-cols-1 gap-2 max-w-8xl" id="product-list">

					{%for recipe in recipes %}

						<div id={{ recipe.id }} class="m-2 myDraggableElement object" draggable='true'>

							<li class="flex flex-col border-2 border-gray-400 rounded shadow-lg rounded-lg text-center h-full p-4 m-2 text-sm recipe">
								{{ recipe.name }}
								{{recipe.tags[0]}}
							</li>

						</div>

					{% endfor %}
					<ul>

						{# {% for recipe in recipes %}
												    <div class="flex flex-row">
												    Recette {{ recipe.name }}
