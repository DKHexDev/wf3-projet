												    {% endfor %}
												    {% endif %}
												    <span class="fav"><i data-recipe="{{ recipe.id }}" class="{{ statusFav }} fa-star"></i></span>
												    </div><br>>
												    {% endfor %} #}

						<ul></div>

						<div class="flex dropzone rounded-lg zone border-2 bg-gray-200 border-gray-400 rounded shadow-lg rounded-lg w-100 h-36 p-6 m-4" id="menu">
							<h2 class="uppercase text-sm md:text-xl text-gray-600 font-bold my-6">
								Votre Séléction
							</h2>
						</div>
					</div>
				</div>
			{% endblock %}
