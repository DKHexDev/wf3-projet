{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<!-- Structure Box -->
	<div class="border-t-2 border-b-2 border-l border-r border-gray-400 rounded w-6/12 mt-14 m-auto">
		<form
			method="post">

			<!-- Condition to log in-->
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<!-- Elements to log in -->
			<h1 class="h3 text-4xl text-center py-6">Connexion</h1>

			<div class="flex flex-col items-center pb-6">

				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-1 block w-2/3 rounded-md border-gray-500 shadow-sm focus:border-indigo-300 focus:ring focus:ring-gray-500 focus:ring-opacity-50" autocomplete="email" required autofocus>

			</div>

			<div class="flex flex-col items-center pb-6">
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control mt-1 block w-2/3 rounded-md border-gray-500 shadow-sm focus:border-indigo-300 focus:ring focus:ring-gray-500 focus:ring-opacity-50" autocomplete="current-password" required>

			</div>


			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
		         See https://symfony.com/doc/current/security/remember_me.html
																									
					<div class="checkbox mb-3">
					    <label>
					        <input type="checkbox" name="_remember_me"> Remember me
					    </label>
					</div>#}

			<div class="flex flex-col items-center pb-6">
				<button class="bg-green-500 text-white hover:bg-green-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" type="submit">
					Se connecter
				</button>
			</div>

		</form>
	</div>
{% endblock %}
