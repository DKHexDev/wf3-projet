{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block banner_title %}Inscription
{% endblock %}

{% block body %}
	<div class="border-2 border-gray-400 rounded w-6/12 mt-14 m-auto shadow-lg">
		<div class="container w-6/12 mx-auto py-5">
			<h1 class="h3 text-4xl text-center ">Inscription</h1>

			<div class ="py-8">
				{{ form_start(form) }}
				{{ form_row(form.email) }}
				{{ form_row(form.pseudo) }}
				{{ form_row(form.plainPassword, {
            		label: 'Mot de passe'
        		}) }}
				{{ form_row(form.imageFile) }}
				{{ form_row(form.agreeTerms) }}

			</div>
			<div class="flex flex-col items-center pb-6">
				<button type="submit" class="bg-green-500 text-white hover:bg-green-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" formnovalidate>S'inscrire</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
