{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block banner_title %}Inscription{% endblock %}

{% block body %}
<div class="container mx-auto py-5">
    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.pseudo) }}
        {{ form_row(form.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(form.agreeTerms) }}

        <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" formnovalidate>S'inscrire</button>
    {{ form_end(form) }}
</div>
{% endblock %}
