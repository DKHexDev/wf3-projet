{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block banner_title %}Inscription
{% endblock %}

{% block body %}
	<div class="bg-yellow-300 shadow-lg border-2 border-yellow-600 rounded-lg w-6/12 mx-auto">
		<div class="container w-6/12 mx-auto py-5">
			<h1 class="h3 text-4xl text-center ">Inscription</h1>

			<div class ="py-8">
				{{ form_start(form) }}
				{{ form_row(form.email) }}
				{{ form_row(form.pseudo) }}
				{{ form_row(form.plainPassword, {
            		label: 'Mot de passe'
        		}) }}
				{{ form_row(form.imageFile) }}
				{{ form_row(form.agreeTerms) }}

			</div>
			<div class="flex flex-col items-center pb-6">
				<button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold rounded focus:outline-none focus:shadow-outline py-3 px-6 " formnovalidate>S'inscrire</button>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
