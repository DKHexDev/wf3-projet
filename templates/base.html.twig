<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %} - M'Cooking</title>
        {# Run `composer require symfony/webpack-encore-bundle`
        and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link href="{{ asset('js/tagsinput/bootstrap-tagsinput.css') }}" rel="stylesheet">
        {% endblock %}

    </head>
    <body class="bg-gray-600">
        <header class="bg-gradient-to-b from-gray-800 to-gray-600">{% include('partials/_header.html.twig') %}</header>

        <div id="FlashMessage" class="container mx-auto">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="bg-{{label}}-100 border-l-4 border-{{label}}-500 text-{{label}}-700 p-4" role="alert">
                        <p class="font-bold">Information</p>
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {% block body %}{% endblock %}

        <footer class="bg-gradient-to-t from-gray-800 to-gray-600 pt-8">{% include('partials/_footer.html.twig') %}</footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script
            src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
            
            <script src="{{ asset("js/tagsinput/bootstrap-tagsinput.min.js") }}"></script>
            <script src="{{ asset("js/typehead.js") }}"></script>
            <script src="{{ asset("js/main.js") }}"></script>
            <script src="{{ asset("js/_header.js") }}"></script>
            <script src="{{ asset("script/dragNdrop.js") }}"></script>
            <script src="{{ asset("script/ajax.js") }}"></script>
            <script src="{{ asset("js/favorites.js") }}"></script>
        {% endblock %}
    </body>
</html>
